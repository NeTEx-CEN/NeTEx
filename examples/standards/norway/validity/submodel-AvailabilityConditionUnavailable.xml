<?xml version="1.0" encoding="UTF-8"?>
<!--
Example of AvailabilityCondition:
- using dayTypes
-->
<AvailabilityCondition xmlns:siri="http://www.siri.org.uk/siri" xmlns="http://www.netex.org.uk/netex" xmlns:core="http://www.govtalk.gov.uk/core" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.netex.org.uk/netex ../../../../xsd/netex_framework/netex_reusableComponents/netex_availabilityCondition_version.xsd">
	<FromDate>2016-09-05T05:00:00Z</FromDate>
	<ToDate>2016-12-08T01:00:00Z</ToDate>
	<IsAvailable>true</IsAvailable>
	<dayTypes>
		<DayType>
			<Name>Weekdays</Name>
			<Description>Mon, Tue, Wed, Thu, Fri</Description>
			<timebands>
				<Timeband>
					<StartTime>05:00:00.000Z</StartTime>
					<EndTime>01:00:00.000Z</EndTime>
					<DayOffset>1</DayOffset>
				</Timeband>
			</timebands>
		</DayType>
		<DayType>
			<Name>Weekend</Name>
			<Description>Sat, Sun</Description>
			<timebands>
				<Timeband>
					<StartTime>07:00:00.000Z</StartTime>
					<EndTime>23:59:59.000Z</EndTime>
					<DayOffset>0</DayOffset>
				</Timeband>
			</timebands>
		</DayType>
	</dayTypes>
</AvailabilityCondition>
